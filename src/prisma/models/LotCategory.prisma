// prisma/models/lot-category.prisma
/**
 * Modelo para Categorias de Lotes (ex: Veículos, Imóveis).
 * É um modelo global, compartilhado entre todos os tenants.
 */
model LotCategory {
  id                String         @id @default(uuid())
  name              String         @unique
  slug              String         @unique
  description       String?        @db.Text
  hasSubcategories  Boolean?       @default(false) @map("has_subcategories")
  logoUrl           String?        @map("logo_url")
  logoMediaId       String?        @map("logo_media_id")
  dataAiHintLogo    String?        @map("data_ai_hint_logo")
  coverImageUrl     String?        @map("cover_image_url")
  coverImageMediaId String?        @map("cover_image_media_id")
  dataAiHintCover   String?        @map("data_ai_hint_cover")
  megaMenuImageUrl  String?        @map("mega_menu_image_url")
  megaMenuImageMediaId String?     @map("mega_menu_image_media_id")
  dataAiHintMegaMenu String?       @map("data_ai_hint_mega_menu")
  iconName          String?        @map("icon_name")
  auctions          Auction[]
  lots              Lot[]
  bens              Bem[]
  directSaleOffers  DirectSaleOffer[] // Relação inversa adicionada aqui
  subcategories     Subcategory[]
  createdAt         DateTime       @default(now()) @map("created_at")
  updatedAt         DateTime       @updatedAt @map("updated_at")

  @@map("lot_categories")
}
