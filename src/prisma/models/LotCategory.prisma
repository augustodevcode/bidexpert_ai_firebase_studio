// prisma/models/lot-category.prisma
/**
 * Modelo para Categorias de Lotes (ex: Veículos, Imóveis).
 * É um modelo global, compartilhado entre todos os tenants.
 */
model LotCategory {
  id                BigInt         @id @default(uuid())
  name              BigInt         @unique
  slug              BigInt         @unique
  description       BigInt?        @db.Text
  hasSubcategories  Boolean?       @default(false) @map("has_subcategories")
  logoUrl           BigInt?        @map("logo_url")
  logoMediaId       BigInt?        @map("logo_media_id")
  dataAiHintLogo    BigInt?        @map("data_ai_hint_logo")
  coverImageUrl     BigInt?        @map("cover_image_url")
  coverImageMediaId BigInt?        @map("cover_image_media_id")
  dataAiHintCover   BigInt?        @map("data_ai_hint_cover")
  megaMenuImageUrl  BigInt?        @map("mega_menu_image_url")
  megaMenuImageMediaId BigInt?     @map("mega_menu_image_media_id")
  dataAiHintMegaMenu BigInt?       @map("data_ai_hint_mega_menu")
  iconName          BigInt?        @map("icon_name")
  auctions          Auction[]
  lots              Lot[]
  bens              Bem[]
  directSaleOffers  DirectSaleOffer[] // Relação inversa adicionada aqui
  subcategories     Subcategory[]
  createdAt         DateTime       @default(now()) @map("created_at")
  updatedAt         DateTime       @updatedAt @map("updated_at")

  @@map("lot_categories")
}
