// prisma/models/map-settings.prisma

model MapSettings {
  id                      BigInt           @id @default(autoincrement())
  settings                PlatformSettings @relation(fields: [settingsId], references: [id], onDelete: Cascade)
  settingsId              BigInt           @unique

  defaultProvider         String  @default("openstreetmap") // 'google', 'openstreetmap', 'staticImage'
  googleMapsApiKey        String?
  staticImageMapZoom      Int     @default(15)
  staticImageMapMarkerColor String  @default("blue")

  @@map("map_settings")
}
