/// Representa o leiloeiro responsável pelo leilão.
model Auctioneer {
  id                   BigInt     @id @default(autoincrement())
  publicId             BigInt     @unique @default(uuid())
  slug                 BigInt?    @unique
  name                 BigInt
  registrationNumber   BigInt?
  contactName          BigInt?
  email                BigInt?
  phone                BigInt?
  address              BigInt?
  city                 BigInt?
  state                BigInt?
  zipCode              BigInt?
  website              BigInt?
  logoUrl              BigInt?
  logoMediaId          BigInt?
  dataAiHintLogo       BigInt?
  description          BigInt?    @db.Text
  auctions             Auction[]
  lots                 Lot[]
  
  tenantId             BigInt
  tenant               Tenant     @relation(fields: [tenantId], references: [id])

  userId               BigInt?    @unique
  user                 User?      @relation(fields: [userId], references: [id])

  createdAt            DateTime   @default(now())
  updatedAt            DateTime   @updatedAt
}
