
model DirectSaleOffer {
  id                      BigInt                @id @default(autoincrement())
  publicId                BigInt                @unique @default(cuid())
  title                   BigInt
  description             BigInt?               @db.Text
  status                  DirectSaleOfferStatus @default(PENDING_APPROVAL)
  offerType               DirectSaleOfferType   @default(BUY_NOW)
  price                   Decimal?              @db.Decimal(12, 2)
  minimumOfferPrice       Decimal?              @db.Decimal(12, 2)
  locationCity            BigInt?
  locationState           BigInt?
  imageUrl                BigInt?
  imageMediaId            BigInt?
  dataAiHint              BigInt?
  views                   Int                   @default(0)
  proposalsCount          Int                   @default(0)
  expiresAt               DateTime?

  // Timestamps
  createdAt               DateTime              @default(now())
  updatedAt               DateTime              @updatedAt

  // Relationships
  tenantId                BigInt
  tenant                  Tenant                @relation(fields: [tenantId], references: [id])
  categoryId              BigInt?
  category                LotCategory?          @relation(fields: [categoryId], references: [id])
  sellerId                BigInt?
  seller                  Seller?               @relation(fields: [sellerId], references: [id])
}
