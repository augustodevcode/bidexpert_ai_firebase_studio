// prisma/models/bidding-settings.prisma

model BiddingSettings {
  id                               BigInt           @id @default(autoincrement())
  settings                         PlatformSettings @relation(fields: [settingsId], references: [id], onDelete: Cascade)
  settingsId                       BigInt           @unique

  instantBiddingEnabled            Boolean @default(true)
  getBidInfoInstantly              Boolean @default(true)
  biddingInfoCheckIntervalSeconds  Int     @default(1)

  @@map("bidding_settings")
}

model VariableIncrementTable {
  id            BigInt           @id @default(autoincrement())
  settings      PlatformSettings @relation(fields: [settingsId], references: [id], onDelete: Cascade)
  settingsId    BigInt           @unique
  rules         Json             @default("[]")

  @@map("variable_increment_tables")
}
