// prisma/models/section-badge-visibility.prisma

model SectionBadgeVisibility {
  id                   BigInt           @id @default(autoincrement())
  settings             PlatformSettings @relation(fields: [settingsId], references: [id], onDelete: Cascade)
  settingsId           BigInt           @unique

  searchGrid           Json @default("{}")
  lotDetail            Json @default("{}")
  homepageCarousel     Json @default("{}")

  @@map("section_badge_visibility")
}
