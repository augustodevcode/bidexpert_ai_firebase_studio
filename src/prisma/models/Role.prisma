/// Define os perfis de usuário e suas permissões.
model Role {
  id              BigInt         @id @default(autoincrement())
  name            BigInt         @unique
  nameNormalized  BigInt         @unique
  description     BigInt?
  permissions     BigInt[]
  
  users           UsersOnRoles[]

  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
}
