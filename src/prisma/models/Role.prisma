/// Define os perfis de usuário e suas permissões.
model Role {
  id              String         @id @default(cuid())
  name            String         @unique
  nameNormalized  String         @unique
  description     String?
  permissions     String[]
  
  users           UsersOnRoles[]

  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
}
