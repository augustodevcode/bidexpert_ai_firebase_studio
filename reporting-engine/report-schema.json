{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Report Definition",
  "description": "A schema for defining reports.",
  "type": "object",
  "properties": {
    "title": {
      "type": "string"
    },
    "pages": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "sections": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "elements": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "type": {
                        "type": "string",
                        "enum": ["text", "image", "chart", "table"]
                      },
                      "properties": {
                        "type": "object"
                      },
                      "dataBinding": {
                        "type": "object"
                      }
                    },
                    "required": ["type"]
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "required": ["title", "pages"]
}
