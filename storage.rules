firebase
rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Rule for the sample images path - allows public read
    match /lots-sample-images/{allPaths=**} {
       allow read;
       // Write access with Admin SDK is not affected by security rules
       // But you can define write rules for other users if applicable
       // allow write: if request.auth != null; // Example: only authenticated users can write
    }

    // Default rule for the rest of the Storage - can be more restrictive
    // ADJUST these rules according to the needs of other parts of your Storage
    match /{allPaths=**} {
      // Example: No one can read or write by default (most secure)
      // allow read, write: if false;
      // Example: Only authenticated users can read and write in other parts of Storage
       allow read, write: if request.auth != null;
    }
  }
}