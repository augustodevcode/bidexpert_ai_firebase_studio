@inherits LayoutComponentBase
@attribute [Authorize] // Proteger todo o painel

<div class="min-h-screen flex flex-col md:flex-row">
    @* Sidebar de Navegação do Dashboard *@
    <div class="md:w-64 bg-gray-800 text-white p-4 space-y-1 shadow-lg md:min-h-screen">
        <div class="flex items-center justify-between md:justify-start mb-4 md:mb-6">
            <NavLink href="/dashboard/overview" class="text-xl font-semibold hover:text-orange-400">Meu Painel</NavLink>
            @* Botão para fechar sidebar em mobile - precisa de JSInterop ou estado *@
            <button class="md:hidden p-2 rounded-md hover:bg-gray-700" @onclick="ToggleMobileSidebar">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>
            </button>
        </div>

        <nav class="@(isMobileSidebarOpen ? "block" : "hidden") md:block">
            <NavLink href="dashboard/overview" class="flex items-center gap-3 py-2.5 px-3 rounded-md hover:bg-gray-700 hover:text-orange-300 transition-colors" Match="NavLinkMatch.All">
                @* Icon Placeholder (e.g., HomeIcon) *@
                <span>Visão Geral</span>
            </NavLink>
            <NavLink href="profile" class="flex items-center gap-3 py-2.5 px-3 rounded-md hover:bg-gray-700 hover:text-orange-300 transition-colors">
                @* Icon Placeholder (e.g., UserCircleIcon) *@
                <span>Meu Perfil</span>
            </NavLink>
            <NavLink href="dashboard/bids" class="flex items-center gap-3 py-2.5 px-3 rounded-md hover:bg-gray-700 hover:text-orange-300 transition-colors">
                @* Icon Placeholder (e.g., GavelIcon) *@
                <span>Meus Lances</span>
            </NavLink>
            <NavLink href="dashboard/wins" class="flex items-center gap-3 py-2.5 px-3 rounded-md hover:bg-gray-700 hover:text-orange-300 transition-colors">
                @* Icon Placeholder (e.g., TrophyIcon) *@
                <span>Meus Arremates</span>
            </NavLink>
            <NavLink href="dashboard/favorites" class="flex items-center gap-3 py-2.5 px-3 rounded-md hover:bg-gray-700 hover:text-orange-300 transition-colors">
                @* Icon Placeholder (e.g., HeartIcon) *@
                <span>Favoritos</span>
            </NavLink>
            <NavLink href="dashboard/documents" class="flex items-center gap-3 py-2.5 px-3 rounded-md hover:bg-gray-700 hover:text-orange-300 transition-colors">
                @* Icon Placeholder (e.g., DocumentTextIcon) *@
                <span>Documentos</span>
            </NavLink>
            <NavLink href="dashboard/history" class="flex items-center gap-3 py-2.5 px-3 rounded-md hover:bg-gray-700 hover:text-orange-300 transition-colors">
                @* Icon Placeholder (e.g., ClockIcon) *@
                <span>Histórico</span>
            </NavLink>
            <NavLink href="dashboard/notifications" class="flex items-center gap-3 py-2.5 px-3 rounded-md hover:bg-gray-700 hover:text-orange-300 transition-colors">
                @* Icon Placeholder (e.g., BellIcon) *@
                <span>Notificações</span>
                <span class="ml-auto bg-red-500 text-xs font-semibold px-1.5 py-0.5 rounded-full">3</span> @* Exemplo de contador *@
            </NavLink>

            @* Links condicionais para Admin/Comitente podem ser adicionados aqui com AuthorizeView *@
             <AuthorizeView Roles="Admin">
                <hr class="my-3 border-gray-700"/>
                <h3 class="px-3 text-xs font-semibold text-gray-400 uppercase tracking-wider mb-1">Admin</h3>
                <NavLink href="admin/dashboard" class="flex items-center gap-3 py-2.5 px-3 rounded-md hover:bg-gray-700 hover:text-orange-300 transition-colors">
                    Painel Admin
                </NavLink>
            </AuthorizeView>

            <hr class="my-3 border-gray-700"/>
            <NavLink href="/" class="flex items-center gap-3 py-2.5 px-3 rounded-md hover:bg-gray-700 hover:text-orange-300 transition-colors">
                @* Icon Placeholder (e.g., ArrowLeftOnRectangleIcon) *@
                <span>Voltar ao Site</span>
            </NavLink>
        </nav>
    </div>

    @* Conteúdo Principal do Dashboard *@
    <div class="flex-grow flex flex-col">
        @* Header do Dashboard (opcional, pode conter breadcrumbs, user menu simplificado, botão de sidebar mobile) *@
        <header class="bg-white shadow-sm p-4 md:hidden sticky top-0 z-40">
            <div class="flex items-center justify-between">
                <NavLink href="/dashboard/overview" class="text-lg font-semibold text-orange-600">Meu Painel</NavLink>
                <button @onclick="ToggleMobileSidebar" class="p-2 rounded-md text-gray-500 hover:bg-gray-100">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path></svg>
                </button>
            </div>
        </header>
        <main class="flex-grow p-4 sm:p-6 lg:p-8 bg-gray-100 overflow-y-auto">
            @Body
        </main>
    </div>
</div>

@code {
    private bool isMobileSidebarOpen = false;

    private void ToggleMobileSidebar()
    {
        isMobileSidebarOpen = !isMobileSidebarOpen;
    }
}
