@page "/dashboard/favorites"
@layout DashboardLayout
@attribute [Authorize]
@using BidExpert_Blazor.ServiceDefaults.Dtos
@using BidExpert_Blazor.Web.Services.HttpClients.Interfaces
@inject IUserClientApiService UserApiService

<PageTitle>Meus Favoritos - Painel BidExpert</PageTitle>

<h1 class="text-2xl font-semibold text-gray-800 mb-6">Meus Lotes Favoritos</h1>

@if (favoriteLots == null)
{
    <p>Carregando seus favoritos...</p>
}
else if (!favoriteLots.Any())
{
    <p>Você ainda não marcou nenhum lote como favorito.</p>
}
else
{
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
        @foreach (var lot in favoriteLots)
        {
            <LotCard Lot="lot" />
        }
    </div>
}

@code {
    private List<LotDto>? favoriteLots;

    protected override async Task OnInitializedAsync()
    {
        favoriteLots = await UserApiService.GetMyFavoriteLotsAsync();
    }
}
