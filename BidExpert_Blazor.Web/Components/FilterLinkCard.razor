@inject NavigationManager NavigationManager

<div class="border rounded-lg shadow-sm hover:shadow-lg transition-shadow cursor-pointer p-4 text-center" @onclick="NavigateToLink">
    @if (!string.IsNullOrWhiteSpace(ImageUrl))
    {
        <img src="@ImageUrl" alt="@Title" class="h-16 w-16 mb-3 mx-auto object-contain"/>
    }
    <h3 class="text-md font-semibold text-gray-800">@Title</h3>
</div>

@code {
    [Parameter] public string Title { get; set; } = "";
    [Parameter] public string? ImageUrl { get; set; }
    [Parameter] public string Link { get; set; } = "";

    private void NavigateToLink()
    {
        if (!string.IsNullOrWhiteSpace(Link))
        {
            NavigationManager.NavigateTo(Link);
        }
    }
}
