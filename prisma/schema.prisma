model MediaItem {
    id String @id @default(cuid())
    fileName String
    storagePath String
    title String?
    altText String?
    caption String?
    description String? @db.Text
    mimeType String
    sizeBytes Int
    urlOriginal String
    urlThumbnail String?
    urlMedium String?
    urlLarge String?
    linkedLotIds Json?
    dataAiHint String?
    
    judicialProcessId String?
    uploadedByUserId String
    uploadedAt DateTime @default(now())

