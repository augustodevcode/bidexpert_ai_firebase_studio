model ThemeSettings {
  id               String            @id @default(cuid())
  name             String            @unique
  platformSettings PlatformSettings? @relation(fields: [platformSettingsId], references: [id])
  platformSettingsId String?
  colors           ThemeColors?
}

model ThemeColors {
  id              String         @id @default(cuid())
  themeSettingsId String         @unique
  themeSettings   ThemeSettings  @relation(fields: [themeSettingsId], references: [id], onDelete: Cascade)
  light           Json?
  dark            Json?
}

model IdMasks {
  id                  String            @id @default(cuid())
  platformSettingsId  String            @unique
