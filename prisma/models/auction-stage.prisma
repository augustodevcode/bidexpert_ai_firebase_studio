model AuctionStage {
  id           String    @id @default(uuid())
  name         String
  startDate    DateTime
  endDate      DateTime
  auctionId    String
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  auction      Auction          @relation(fields: [auctionId], references: [id], onDelete: Cascade)
  lotPrices    LotStagePrice[]

  @@index([auctionId])
}
