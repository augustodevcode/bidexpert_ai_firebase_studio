model User {
  id                BigInt      @id @default(autoincrement())
  email             String    @unique
  password          String
  fullName          String?
  avatarUrl         String?
  dataAiHint        String?
  
  // Personal Info (PF)
  cpf               String?   @unique
  rgNumber          String?
  rgIssuer          String?
  rgIssueDate       DateTime?
  rgState           String?
  dateOfBirth       DateTime?
  gender            String?
  profession        String?
  nationality       String?
  maritalStatus     String?
  propertyRegime    String?

  // Spouse Info
  spouseName        String?
  spouseCpf         String?
  
  // PJ Info
  razaoSocial       String?
  cnpj              String?   @unique
  inscricaoEstadual String?
  
  // Contact
  cellPhone         String?
  homePhone         String?
  website           String?
  
  // Address
  zipCode           String?
  street            String?
  number            String?
  complement        String?
  neighborhood      String?
  city              String?
  state             String?
  
  // Status & Preferences
  habilitationStatus String    @default("PENDING_DOCUMENTS")
  accountType        String    @default("PHYSICAL")
  optInMarketing     Boolean   @default(false)
  
  // Timestamps
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  lastLogin         DateTime?

  // Relations
  roles          UsersOnRoles[]
  tenants        UsersOnTenants[]
  bids           Bid[]
  wins           UserWin[]         @relation("WonLots")
  maxBids        UserLotMaxBid[]
  reviews        Review[]
  questions      LotQuestion[]
  documents      UserDocument[]
  habilitations  AuctionHabilitation[]
  sellerProfile  Seller?
  auctioneerProfile Auctioneer?
  uploadedMedia     MediaItem[]
  reports           Report[]
}
