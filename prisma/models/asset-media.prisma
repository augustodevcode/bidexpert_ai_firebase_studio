// prisma/models/asset-media.prisma
// Modelo de junção para a relação muitos-para-muitos entre Asset e MediaItem (para galerias)
model AssetMedia {
  id        String   @id @default(cuid())
  assetId   String
  asset     Asset    @relation("AssetGallery", fields: [assetId], references: [id], onDelete: Cascade)
  mediaId   String
  mediaItem MediaItem @relation("AssetGalleryItems", fields: [mediaId], references: [id], onDelete: Cascade)
  order     Int?

  @@unique([assetId, mediaId])
  @@map("asset_media")
}
