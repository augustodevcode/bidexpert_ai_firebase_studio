{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run BidExpert App",
            "type": "shell",
            "command": "npm run dev",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [],
            "isBackground": true,
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Run BidExpert App with Preview",
            "type": "shell",
            "command": "node .vscode/start-preview.js",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [],
            "isBackground": true,
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Run BidExpert App (Port 9005)",
            "type": "shell",
            "command": "npm run dev:9005",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "new"
            },
            "problemMatcher": {
                "pattern": {
                    "regexp": "^(.*)$",
                    "line": 0
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^.*â–².*compiling.*",
                    "endsPattern": "^.*ready on.*9005.*"
                }
            },
            "isBackground": true,
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "BidExpert App - Porta 9005 (Full Logging)",
            "type": "shell",
            "command": "node .vscode/start-9005.js",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": false
            },
            "problemMatcher": [],
            "isBackground": true,
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Run InfraControl",
            "type": "shell",
            "command": "npm run dev",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [],
            "isBackground": true,
            "options": {
                "cwd": "${workspaceFolder:BidExpert InfraControl}"
            }
        },
        {
            "label": "Run InfraControl (Prod)",
            "type": "shell",
            "command": "npm run start",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [],
            "isBackground": true,
            "options": {
                "cwd": "${workspaceFolder:BidExpert InfraControl}"
            }
        }
    ]
}