{
    "version": "1.0.0",
    "configurations": [
        {
            "name": "Debug Playwright Tests",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/@playwright/test/cli.js",
            "args": [
                "test",
                "--headed"
            ],
            "console": "integratedTerminal",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "env": {
                "NODE_ENV": "test"
            }
        },
        {
            "name": "Debug Playwright Test (current file)",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/@playwright/test/cli.js",
            "args": [
                "test",
                "${fileBasenameNoExtension}",
                "--headed"
            ],
            "console": "integratedTerminal",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "env": {
                "NODE_ENV": "test"
            }
        }
    ]
}
